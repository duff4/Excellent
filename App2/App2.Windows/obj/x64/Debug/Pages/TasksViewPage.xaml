<pages1:NavBar
    x:Class="App2.Pages.TasksViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="using:App1.Pages"
    xmlns:pages1="using:App2.Pages"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="#FF7E9CEA">
        <Button x:ConnectionId='1' x:Name="TasksButton" Content="TASKS" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" BorderThickness="0" RenderTransformOrigin="0.5,0.5" Width="95" MinWidth="50" MinHeight="23" Height="60" Padding="0" Foreground="Red"                                                 />
        <Button x:ConnectionId='2' x:Name="EventsButton" Content="EVENTS" HorizontalAlignment="Left" Margin="105,0,0,0" VerticalAlignment="Top" MinHeight="23" MinWidth="50" Height="60" BorderThickness="0" Width="95" Padding="0"                                                   />
        <Button x:ConnectionId='3' x:Name="CalendarButton" Content="CALENDAR" HorizontalAlignment="Left" Margin="200,0,0,0" VerticalAlignment="Top" BorderThickness="0" MinHeight="23" MinWidth="50" Width="95" Height="60" Padding="0"                                                       />
        <Button x:ConnectionId='4' x:Name="SubjectsButton" Content="SUBJECTS" HorizontalAlignment="Left" Margin="295,0,0,0" VerticalAlignment="Top" MinHeight="23" MinWidth="50" Padding="0" Width="95" BorderThickness="0" Height="60"                                                       />
        <Button x:ConnectionId='5' x:Name="AddTask" Content="Add Task" HorizontalAlignment="Left" Margin="13,515,0,0" VerticalAlignment="Top"                          />

        <GridView x:ConnectionId='6' ScrollViewer.VerticalScrollMode = "Auto" ScrollViewer.HorizontalScrollMode = "Disabled"  ScrollViewer.VerticalScrollBarVisibility = "Disabled" ScrollViewer.HorizontalScrollBarVisibility = "Disabled" x:Name="TasksGridView" HorizontalAlignment="Left" Height="463" Margin="16,55,0,0" VerticalAlignment="Top" Width="370"                                                  BorderBrush="White">
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapGrid MaximumRowsOrColumns="1" Orientation="Horizontal" ItemWidth="370" />
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
        </GridView>
        <Button x:ConnectionId='7' x:Name="EditTaskButton" Content="Edit Task" HorizontalAlignment="Left" Margin="281,515,0,0" VerticalAlignment="Top"                           />
        <Button x:ConnectionId='8' x:Name="DeleteTaskButton" Content="Delete Task" HorizontalAlignment="Left" Margin="139,515,0,0" VerticalAlignment="Top" RenderTransformOrigin="-3.825,-1.308"                              Visibility="Collapsed"/>
    </Grid>
</pages1:NavBar>

